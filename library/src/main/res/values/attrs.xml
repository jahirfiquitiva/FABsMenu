<resources>
    <declare-styleable name="FABsMenuLayout">
        <attr name="fabs_menu_overlayColor" format="color"/>
        <attr name="fabs_menu_cickableOverlay" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="TitleFAB">
        <attr name="fab_title" format="string"/>
        <attr name="fab_title_backgroundColor" format="color"/>
        <attr name="fab_title_textColor" format="color"/>
        <attr name="fab_title_textPadding" format="dimension"/>
        <attr name="fab_title_cornerRadius" format="dimension"/>
        <attr name="fab_enableTitleClick" format="boolean"/>
    </declare-styleable>

    <declare-styleable name="FABsMenu">
        <attr name="fab_menuMargins" format="dimension"/>
        <attr name="fab_menuTopMargin" format="dimension"/>
        <attr name="fab_menuBottomMargin" format="dimension"/>
        <attr name="fab_menuRightMargin" format="dimension"/>
        <attr name="fab_menuLeftMargin" format="dimension"/>

        <attr name="fab_moreButtonRippleColor" format="color"/>
        <attr name="fab_moreButtonBackgroundColor" format="color"/>

        <attr name="fab_moreButtonSize" format="enum">
            <enum name="normal" value="0"/>
            <enum name="mini" value="1"/>
        </attr>

        <attr name="fab_moreButtonPlusIcon" format="reference"/>

        <attr name="fab_labelsPosition" format="enum">
            <enum name="left" value="0"/>
            <enum name="right" value="1"/>
        </attr>

        <attr name="fab_expandDirection" format="enum">
            <enum name="up" value="0"/>
            <enum name="down" value="1"/>
            <enum name="left" value="2"/>
            <enum name="right" value="3"/>
        </attr>
    </declare-styleable>
</resources>